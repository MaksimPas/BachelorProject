@model BachelorProject.Models.Equipment

@{
    ViewBag.Title = "Rediger";
}

<h2>Rediger</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger"> Feilmelding: @Html.Raw(ViewBag.ErrorMessage) </p>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rediger registrering</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.NameAndType, "Navn og type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameAndType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameAndType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lagre" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary m-0" onclick="location.href='@Url.Action("Index","Equipments")'">Tilbake til oversikten</button>
</div>



@*this section must be here in order to enable client side validation*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
