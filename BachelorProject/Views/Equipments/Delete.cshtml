@model BachelorProject.Models.Equipment

@{
    ViewBag.Title = "Slett";
}

<div class="container" style="word-break: break-word">

    <h2>Er du sikker på at du vil slette dette?</h2>
    <hr />

    <dl class="dl-horizontal form-horizontal">
        <div class="form-group">
            <dt>
                <span>ID</span>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
        </div>
        <div class="form-group">
            <dt>
                <span>Navn og type</span>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameAndType)
            </dd>
        </div>

        <div class="form-group">
            <dd>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions">
                        <input type="submit" value="Slett" class="btn btn-danger" />
                    </div>
                }
            </dd>
        </div>
    </dl>

</div>
<div>
    <button type="button" class="btn btn-primary m-0" onclick="location.href='@Url.Action("Index","Equipments")'">Tilbake til oversikten</button>
</div>

